@model IEnumerable<MvcApplication1.Models.Editora>

@{
    ViewBag.Title = "Index";
}

<h2>Editoras</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@if (TempData["Mensagem"] != null)
{
    <div>@TempData["Mensagem"]</div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.EditoraID }) |
            @Html.ActionLink("Details", "Details", new { id=item.EditoraID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.EditoraID })
        </td>
    </tr>
}

</table>
